<Window x:Class="InputViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputViewer"
        mc:Ignorable="d"
        Title="Input Viewer" Height="400" Width="450"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Always on Top"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           FontSize="12"/>

                <ui:ToggleSwitch x:Name="AlwaysOnTopSwitch"
                                 Toggled="AlwaysOnTop_Toggled"
                                 OnContent=""
                                 OffContent=""/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">

                <TextBlock Text="Lock Size"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <ui:ToggleSwitch
                    x:Name="LockSizeSwitch"
                    Toggled="LockSize_Toggled"
                    OnContent=""
                    OffContent=""/>
            </StackPanel>

        </Grid>

        <ScrollViewer Grid.Row="1">
            <ui:SimpleStackPanel Margin="12,0,12,12" Spacing="12">
                <!-- Active Window Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="12" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="ACTIVE WINDOW" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}"/>
                        <TextBlock x:Name="ActiveWindowText" Text="Detecting..." Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Mouse Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="12" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="MOUSE POSITION" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}"/>
                            <TextBlock x:Name="MousePositionText" Text="(0, 0)" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="MOUSE BUTTONS" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}"/>
                            <TextBlock x:Name="MouseButtonText" Text="None" Style="{StaticResource BodyTextBlockStyle}" Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}" Opacity="0.5" FontStyle="Italic" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Keys Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="12" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="PRESSED KEYS" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}"/>
                        <TextBlock x:Name="PressedKeysText" Text="None" Style="{StaticResource BodyTextBlockStyle}" Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}" Opacity="0.5" FontStyle="Italic" FontWeight="SemiBold" Margin="0,4,0,0"/>


                    </StackPanel>
                </Border>
            </ui:SimpleStackPanel>
        </ScrollViewer>
    </Grid>
</Window>


